rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to write feedback
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
    }

    // Allow only authenticated users to submit a report
    match /reports/{reportId} {
      allow create: if request.auth != null;
    }

    // Allow users to read/write their own profile
    match /users/{userId} {
      allow read: if true; 
      allow write: if true; // TEMPORARY DEBUG: Allow all writes
    }

    // Allow public contact messages
    match /contact_messages/{messageId} {
      allow create: if true;
    }
    
    // Allow public read of listings, authenticated create
    match /listings/{listingId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.creatorId;
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
